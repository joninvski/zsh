#COLOR

local GRAY=$'%{\e[1;30m%}'
local LIGHT_GRAY=$'%{\e[0;37m%}'
local WHITE=$'%{\e[1;37m%}'
local LIGHT_BLUE=$'%{\e[1;36m%}'
local YELLOW=$'%{\e[1;33m%}'
local PURPLE=$'%{\e[1;35m%}'
local GREEN=$'%{\e[1;32m%}'
local BLUE=$'%{\e[1;34m%}'

PROMPT=$GREEN'${USER}'$LIGHT_GRAY'@'$GREEN'${HOST}'$BLUE'%(!.#.$) '$WHITE
RPROMPT=$BLUE'[%~]'$WHITE

